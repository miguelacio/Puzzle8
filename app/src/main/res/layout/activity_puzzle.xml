<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.miguelacio.cuadritode9.PuzzleActivity">

    <GridView
        android:id="@+id/grid_view"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_below="@id/grid_view"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:id="@+id/text_view_movements"
            android:text="NÃºmero de movimientos: 0"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/text_view_movements"
            android:layout_width="match_parent"
            android:text="Tiempo transcurrido: 0"
            android:id="@+id/text_view_time"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>
